{
  "name": "personal-site-react",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run sitemap && vite build",
    "preview": "vite preview --port 5174",
    "deploy": "npm run build && gh-pages -d dist",
    "sitemap": "node scripts/generate-sitemap.js",
    "analyze": "./scripts/bundle-analysis.sh",
    "build:pwa": "./scripts/build-pwa.sh",
    "perf": "npm run build && npm run analyze",
    "lighthouse": "lighthouse http://localhost:5174 --output=json --output=html --output-path=./analysis/lighthouse",
    "test:performance": "npm run build && npm run lighthouse"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.1",
    "@mdx-js/rollup": "^3.1.1",
    "framer-motion": "^12.23.12",
    "katex": "^0.16.23",
    "lucide-react": "^0.545.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.2",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "depcheck": "^1.4.7",
    "gh-pages": "^6.3.0",
    "source-map-explorer": "^2.5.3",
    "vite": "^7.1.4",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
